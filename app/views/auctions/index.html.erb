<div class='container'>
  <h2>Auctions</h2>
  <% @auctions.order('created_at DESC').each do |auction| %>
    <%= link_to auction.title, auction %>
    <p><%= auction.details %></p>
    <p><%= link_to 'Delete Auction',
             auction_path(auction),
                    method: :delete,
     data: {confirm: 'Are you sure?'},
     class: 'pull-right' %></p>
     <strong>Ends</strong>: <%= auction.ends_on %>
    <br>
    <hr>
  <% end %>
</div>
